<script>
  document.onload=function(){
    previewFile();  //calls the function named previewFile()
  }
  function previewFile(){
    var preview = document.querySelector('img'); //selects the query named img
    var file    = document.querySelector('input[type=file]').files[0]; //sames as here
    var reader  = new FileReader();

    reader.onloadend = function () {
      preview.src = reader.result;
      document.getElementById("category_icon").setAttribute("value",reader.result);
    }

    if (file) {
      reader.readAsDataURL(file); //reads the data as a URL

    } else {
      preview.src = "";
    }
  }
</script>

<% name ||= "Crear" %>
<h1><%= name %> Género</h1>
<%= form_for(@category) do |f| %>
  <% if @category.errors.full_messages.length > 0 %>
    <div class="errors">
      <p>Se encontraron los siguientes errores al guardar la historia:</p>
      <% @category.errors.full_messages.each do |message| %>
        <p class="error">*<%= message %></p>
      <% end %>
    </div>
  <% end %>

  <div class="form-group">
    <label for="title">Icono representativo del género</label><br>
    <%= f.text_field :icon, placeholder: "URL del icono", class: "form-control" %>
  </div>
  <div class="form-group">
    <label for="title">Nombre del género</label><br>
    <%= f.text_field :name, placeholder: "Nombre", class:"form-control" %>
  </div>
  <div class="field">
    <label for="title">Descripción del género</label><br>
    <%= f.text_area :description, placeholder: "Descipción", class:"form-control" %>
  </div>

  <div class="field">
    <%= f.submit "Guardar", class: "btn btn-primary" %>
  </div>
<% end %>

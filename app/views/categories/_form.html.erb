<% name ||= "Crear" %>
<h1><%= name %> categoría</h1>
<%= form_for(@category) do |cat|%>
    <% @category.errors.full_messages.each do |message| %>
        <div class="error">
          *<%= message  %>
        </div>
    <% end %>
    <div class="field">
      <%= cat.text_field :name, placeholder: "Nombre de categoría", class:"form-field" %>
    </div>
    <div class="field">
        <%= cat.text_area :description, placeholder: "Descripción de categoría", class:"form-field" %>
    </div>
    <div class="field">
      Icono:
      <%= cat.file_field :icon%>
    </div>
    <div class="buttons">
      <%= cat.submit "Guardar", class:"btn btn-default" %>
      <%= link_to "Volver", categories_path,class: "btn btn-default" %>
    </div>
<% end %>
<h1>Categorías</h1>
<div class="category-list">
<% @categories.each do |category|%>


  <div class="col-md-4">
    <div class="category-row">
        <div class="block-right">
          <img src='<%=category.icon %>' height="50">
          <br>
        </div>
        <div class="block-left">
          <%= link_to category.name, category,title: category.description, rel: 'tooltip', class: "name-category-list" %>
          <br>
          <%= link_to "Borrar",category, method: :delete , class: "category-link" %>
        </div>

    </div>
  </div>

<% end %>

</div>
<div class="buttons col-md-4 col-md-offset-4">
  <%= link_to 'Nueva categoría', new_category_path, class: 'btn btn-default' %>
</div>


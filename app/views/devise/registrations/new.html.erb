<div class="container">
  <div class="jumbotron jumbo-transparente col-md-6 col-md-offset-3 row">


    <img class="logo center-block" src="/assets/logo definitivo.png">
              
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

      <h1 id="cabecita">Formulario de Registro</h1>

        <div class="field">
          <%= f.text_field :name, class: "form-control", placeholder:"Nombre" %>
        </div>

        <%= f.text_field :surname1, class: "form-control-inline col-md-6 ", placeholder:"Primer apellido" %>

        <%= f.text_field :surname2, class: "form-control-inline col-md-6 ", placeholder:"Segundo apellido" %>
        
        <div class="field">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :password, "Contraseña" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> caracteres mínimo)</em>
          <% end %><br/>
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "Repita contraseña" %><br/>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :username, "Usuario" %><br/>
          <%= f.text_field :username, class: "form-control" %>
        </div>



        <div class="field">
          <%= f.label :birthday, "Fecha de nacimiento" %><br/>
          <%= f.text_field :birthday, :placeholder => "dd/mm/aaaa", class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :phone, "Teléfono" %><br/>
          <%= f.text_field :phone, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.hidden_field :sku, value: User.generateSKU %>
        </div>

        <br>

        <%= f.submit "Registrarse" , class: "btn btn-primary btn-block" %> 

      <% end %>

      <hr>

      <%= button_to 'Iniciar sesión', new_user_session_path, class: 'btn btn-danger btn-block', method: :get %>
          
      <%= link_to 'Descubrir', stories_example_path, class: 'btn btn-success btn-block', data: {'no-turbolink': 'true'} %>

    </div>
  </div>  
</div>
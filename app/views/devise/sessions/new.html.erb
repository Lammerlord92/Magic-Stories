<!DOCTYPE html>
<html>
  <head>
    <title>Tree Story</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>

  <body id="welcome">
    <div class="container">
      <br>
      <div class="jumbotron">
        <form action="" class="form-horizontal">
          <div class="form-group">
            <img  class="image-responsive col-md-2" src="/assets/logo definitivo.png">
          </div>
          <br>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">

            <p>
              <%= f.email_field :email, autofocus: true, :placeholder => "e-mail" %><br><br>

              <%= f.password_field :password, autocomplete: "off", :placeholder => "Contraseña" %>
            </p>
          </div>
            
            

            
            <% if devise_mapping.rememberable? -%>
              <div class="form-group">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, "SESIÓN ACTIVA" %>
              </div>
            <% end -%>

            <br>

            <div class="form-group">
              <p>
              <%= f.submit "Iniciar sesión" , class: 'btn btn-primary' %> <br>
              </p>

              <p>
              <button class="btn btn-danger btn-sm" type="submmit" formaction="/user/sign_up">Regístrate</button> <br>
              </p>

              <p>
              <button class="btn btn-success btn-lg" type="submmit" formaction="#">DESCUBRE</button>
              </p>
              <%-# DEMO Por añadir -%>

            </div>
            <% end %>
          
            
        </form>
      </div>  
    </div>
  <body>
</html>  
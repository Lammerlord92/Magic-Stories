
<h1>Nuevo comentario</h1>


<%= form_for([@comment])  do |f| %>

    <% if @comment.errors.full_messages.length > 0 %>
        <div class="errors">
          <p>
            Se encontraron los siguientes errores al guardar el comentario:
          </p>
          <% @comment.errors.full_messages.each do |message| %>
              <p class="error">
                *<%= message  %>
              </p>
          <% end %>
        </div>
    <% end %>

    <br>

    <div class="field">
      <%= f.label :title, 'Titulo' %>
      <%= f.text_field :title, placeholder: 'Titulo' %>
    </div>

    <br>

    <div class="field">
      <%= f.label :body, 'Comentario' %>
      <%= f.text_area :body, placeholder: 'Comentario' %>
    </div>

    <br>

    <div>
      <fieldset class="rating">
        <legend>Valoraci√≥n:</legend>
        <%= f.radio_button :rating, '1'%> &#9733
        <br>
        <%= f.radio_button :rating, '2'%> &#9733 &#9733
        <br>
        <%= f.radio_button :rating, '3'%> &#9733 &#9733 &#9733
        <br>
        <%= f.radio_button :rating, '4'%> &#9733 &#9733 &#9733 &#9733
        <br>
        <%= f.radio_button :rating, '5'%> &#9733 &#9733 &#9733 &#9733 &#9733
      </fieldset>
    </div>


    <br>

    <%= f.hidden_field :profile_id, :value => @idProfile %>
    <%= f.hidden_field :story_id, :value => @idStory %>
    <%= f.hidden_field :commentedClass, :value => @commentedClass %>

    <div class="field">
      <%= f.submit 'Publicar' %>
    </div>

<% end %>
<header class="navbar navbar-default" id="lay">
  <div class="container" id="barcon" >
    <div class="navbar-header row row-centered  col-md-4 col-centered">

      <a href="/">
        <img class="image-responsive  col-md-4 col-centered" src="/assets/logo fondo.png" alt="Tree Story">
      </a>

      <a id="barcon" href="">
        <img class="image-responsive  col-md-2 col-centered" src="/assets/msj blanco.png" alt="Comentarios">
      </a>

    </div>
    <ul class="nav navbar-nav" id="barcon">
      <li><a data-no-turbolink="true"  href="/stories/example" id="barcon">Descubrir</a></li>
      <li><a href="/categories" id="barcon">Géneros</a></li>

      <% if user_signed_in? %>
        <% if current_user.role_type == 'PremiumUser' %>

          <li><%= button_to '+ Nueva Historia',"/stories/new",  class: 'btn',method: :get, id: 'NH' %></li>
        
        <% end %>
      <% end %>
    
    </ul>
    
    <ul class="nav navbar-nav navbar-right" id="barcon">  
      <li class="dropdown" id="barcon">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown"
            role="button" aria-haspopup="true" aria-expanded="false" id="barcon">
          <% if user_signed_in? %>
          <%= current_user.username %>
          <% else %>
          Usuario
          <% end %>
        <span class="caret"></span></a>
        <ul class="dropdown-menu">
          <% if user_signed_in? %>
              <% if current_user.profile %>
                <li><a href="/profiles/<%= current_user.profile.id %>">Mi perfil</a></li>
              <% end %>
              <% if current_user.role_type == 'Administrator' %>
                  <li><a href="/categories/new">Crear género</a></li> <!-- No tiene sentido que cualquiera entre y llene la BD de mierda -->
              <% end %>


          <li><a href="/profiles">Comunidad</a></li>
          <li><a href="/profiles/search?choice=friends">Mis conexiones</a></li>
          <li role="separator" class="divider"></li>
          <li>
               <%= link_to "Cerrar sesión", destroy_user_session_path, :method => :delete %>
          </li>

          <% else %>
          <li>
              <%= link_to "Iniciar sesión", new_user_session_path %>

          </li>
          <li>
               <%= link_to "Registrarse", new_user_registration_path %>
          </li>
          <% end %>

        </ul>
      </li>
    </ul>
  </div>
</header>
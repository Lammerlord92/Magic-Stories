<div class="row">
  <div class="col-md-4">
    <div class="story-metadata">
      <div class="center">
        <div class="story">
          <!-- TODO: Hacer que la imagen se posicione igual que como en las imágenes del diseñador -->
          <%= render 'stories/story_cover', story: story %>
        </div>
      </div>
      <p class="valoration">Valoración</p>
      <h2><%= story.creatorProfile.name %></h2>
      <hr/>
      <p>Géneros: <%= story.categories %></p> <!-- TODO: Probar que las categorías se muestren cuando se arregle el problema de BD -->
      <p>Idioma: <%= story.language %></p> <!-- TODO: Mejorar la forma en la que se muestra el idioma -->
      <p>Fecha de publicación: <%= story.release_date %></p> <!-- TODO: Mejorar la forma en la que se muestra la fecha -->
      <% if current_user.present? %> <!-- Evitar "NilException" -->
        <% if story.creatorProfile.id == current_user.profile.id %>
          <div class="center" style="margin-bottom: 10px;">
            <%= button_to 'Ir al editor de historias', "/welcome/maker/#{story.id}",  class: 'btn btn-default', method: :get %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="col-md-8">
    <div class="story-data">
      <h2 class="title"><%= story.title %></h2>
      <hr/>
      <div class="synopsis">
        <h4><strong>Resumen</strong></h4>
        <p><%= story.description %></p>
      </div>
      <div class="buttons">
        <% unless current_user.nil? %>
          <% unless story.has_been_acquired_by_user?(current_user) %>
            <form action="/additions/create/<%= story.id %>" method="get">
              <button type="submit" class="btn btn-primary">
                <p class="btn-label">Adquirir historia</p>
                <p class="price">Precio: <span><%= story.price %> €</span></p>
              </button>
            </form>
          <% else %>
            <form action="/stories/read/<%= story.id %>" method="get">
              <button type="submit" class="btn btn-default">
                <p class="btn-label">Leer</p> <!-- TODO: Falta redirigir al lector -->
              </button>
            </form>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

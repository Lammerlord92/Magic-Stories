<h1>Historias</h1>

<!-- Cuadro de búsqueda de historias -->
<form action="/stories/search" method="get">
  <input type="text" name="q" placeholder="Buscar historias">
  <button type="submit">Buscar</button>
</form>
<br>

<!-- Tabs para cada listado -->
<ul class="nav nav-tabs nav-justified">
  
  <!-- Todas las historias (todos los usuarios) -->
  <li <% if option == "all" %>class="active"<% end %> role="presentation">
    <%= link_to "Todas", stories_path, class:"btn btn-default" %>
  </li>

  <!-- Historias adquiridas (sólo usuarios logueados) -->
  <% if user_signed_in? %>

    <li <% if option == "acquired" %>class="active"<% end %> role="presentation">
      <%= link_to "Adquiridas", stories_acquired_path, class:"btn btn-default" %>
    </li>

    <!-- Historias creadas (sólo usuarios premium y admins) -->
    <% unless current_user.role_type == "FreeUser" %>
      
      <li <% if option == "created" %>class="active"<% end %> role="presentation">
        <%= link_to "Creadas", stories_created_path, class:"btn btn-default" %>
      </li>

    <% end %>

  <% end %>

</ul>

<!-- Historias listadas -->
<% @stories.each do |story| %>
  <div class="row">
    <div class="col-md-3">
      <!-- Imagen de test -->
      <% a = "http://photos1.meetupstatic.com/photos/event/2/a/6/a/global_11230858.jpeg" %>
      <%= image_tag( a, class: "img-circle") %>
    </div>
    <div class="col-md-8 text-center pull-right story">
      <h3><a href="/stories/<%=story.id %>"><%= story.title %></a></h3>
      </br>
      <%= story.description %>
      <br/>
    </div>
  </div>
  <br>
<% end %>
<% name ||= "Crear" %>

<head>
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">



</head>

<h1>Crear historia</h1>

<%=form_for(@story) do |f|%>
    <% @story.errors.full_messages.each do |message| %>
        <div class="error">
          *<%= message  %>
        </div>
    <% end %>

    <div class="field">
      Portada: <%= f.file_field :cover %>
    </div>
    <br>
    <div class="field">
      <%= f.text_field :title, placeholder: "Título" %>
    </div>
    <br>
    <div class="field">
      <%= f.text_area :description, placeholder: "Descripción" %>
    </div>
    <br>
    <div class="field">
      <%= f.text_field :language, placeholder: "Idioma" %>
    </div>
    <br>
    <div class="field">
      <%= f.number_field :price, placeholder: "Precio", min: 0, step: 0.1  %>
    </div>
    <br>
    <div class="field">
      <%= f.date_select :release_date, placeholder: "Fecha de salida" %>
    </div>
    <br>

    <button type="button" id="buttonStory" class="btn btn-primary">Select category...</button>

    <section id="modal" class="modal fade">
      <div class="modal-body">
        <form action="buttonStory.php" method="post" role="form">
          <span id="close" onclick="close();" class="glyphicon glyphicon-remove circle pull-right"></span>

          <div class="form-group">
            <label for="title">Title</label>
            <input type="text" class="form-control" id="title" placeholder="Enter Title">
          </div>


          <div class="form-group">
            <label for="description">Description</label>
            <textarea typeof="text" class="form-control" id="description" placeholder="Enter Description"></textarea>
          </div>


        </form>
      </div>
    </section>

    <div class="field">
      <%= f.submit "Guardar" %>
    </div>


    <script src="http://code.jquery.com/jquery=1.11.0.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
    <script type="text/javascript">
      $(document).ready(function() {
        jQuery.noConflict();
        $("#buttonStory").on('click',function(){
          $("#modal").modal({
            show:true
          })
          $("#close").on('click',function(){
            $("#modal").modal('hide')
          })
        })
      })
    </script>
<%end%>
<% @profiles.each do |profile| %>
<div class="row">
    
  <!-- Avatar -->
  <!-- TODO imágenes cuadradas -->
  <div class="col-md-2">
    <%= image_tag(profile.avatar, class: "img-circle img-responsive") %>
  </div>
    
  <!-- Perfil -->
  <div class="col-md-4">
    
    <!-- Información -->
    <div class="row">
      <div class="col-md-7">
        <h2>
        <a href="/profiles/<%= profile.id %>"><%= profile.name %></a>
        <% if profile.profile_status == 'PRIVATE' %>
        <!-- TODO Arreglar redimensión icono -->
        <i class="glyphicon glyphicon-lock" aria-hidden="true"></i>
        <% end %>
        </h2>
        <%= profile.description %>
      </div>
      <div class="col-md-5 text-right escritura gris">
        <!-- TODO Añadir atributo de valoración -->
        <p>Nota: 9</p>
        <!-- TODO Arreglar redimensión icono -->
        <p><i class="glyphicon glyphicon-book" aria-hidden="true"></i>&nbsp&nbsp<%= profile.stories.count %></p>
      </div>
    </div>

    <!-- Botón de amistad -->
    <% if user_signed_in? %>
    <div class="row container-fluid boton">
      <% if current_user.profile == profile %>
        <%= link_to "Editar mi perfil", "/profiles/#{profile.id}/edit", class: "btn btn-primary btn-block" %>
      <% elsif !current_user.profile.isFriend(profile) %>
        <%= link_to "Solicitud de amistad", "/request_friendships/send_request/#{profile.user_id}", class: "btn btn-primary btn-block" %>
      <% else %>
        <%= link_to "Amigo", "#", class: "btn btn-primary btn-block disabled" %>
      <% end %>
    </div>
    <% end %>

    <!-- Seguidores/siguiendo -->
    <!-- TODO Cambiar atributos de amistad -->
    <div class="row gris">
      <div class="col-md-3 col-md-offset-3 text-center">
        <%= profile.followers_count %><br/>seguidores
      </div>
      <div class="col-md-3 text-center left-divider">
        <%= profile.followees_count %><br/>siguiendo
      </div>
    </div>

  </div>

  <!-- Historias -->
  <div class="col-md-6">
    <div class="row">
      <div class="col-md-1">
        <!-- Relleno para grid de Bootstrap -->
      </div>
      <% profile.stories.last(4).each do |story| %>
      <div class="col-md-2 stories">
        <a href="/stories/<%= story.id %>">
          <p><%= story.title.upcase %></p>
          <img class="img-responsive" title="<%= story.title %>" src="/assets/temporal_cover.jpg" />
          <!-- TODO Añadir atributo de valoración -->
          <p>NOTA: 9</p>
        </a>
      </div>
      <% end %>
    </div>
  </div>
      
</div>
<hr/>
<% end %>
<% name ||= "Comentarios" %>

<% if @profile.profile_status == 'PUBLIC' ||  current_user.present? &&
    (current_user.role_type == 'Administrator' || @is_friend_profile || @is_current_profile) %>
    <div>
      <table>
        <tr>
          <td>Titulo</td>
          <td>Comentario</td>
          <td>Rating</td>
          <td>Fecha</td>
          <td>Autor</td>
        </tr>

        <% @comments.each do |comment|%>
            <tr>
              <td>
                <%= comment.title %>
              </td>
              <td>
                <%= comment.body %>
              </td>
              <td>
                <%= comment.rating %>
              </td>
              <td>
                <%= comment.date %>
              </td>
              <td>
                <%= comment.author %>
              </td>
            </tr>
        <% end %>


      </table>
    </div>

    </br>

    <%= link_to "Nuevo comentario", new_comment_path(:id => @profile.id), class:"btn btn-default", :method => :get %>

<% end %>
<div class="row">

  <div class="col-md-2">
    <%= image_tag(@profile.avatar, class: "img-circle img-responsive") %>
  </div>


  <!-- Perfil -->
  <div class="col-md-6">
    <!-- Información -->
    <div class="row">
      <div class="col-md-7">
        <h2>
          <%= @profile.user.username %>
          <% if @profile.profile_status == 'PRIVATE' %>
          <i class="glyphicon glyphicon-lock" aria-hidden="true"></i>
          <% end %>
        </h2>
      </div>
    </div>
    <div class="row container-fluid boton">
      <!-- Información privilegiada -->
      <% unless @is_current_profile or @profile.profile_status == 'PUBLIC' or @is_friend_profile or (current_user.present? && current_user.role_type == 'Administrator') %>
        <p><em>Este perfil es privado y solo puede acceder a él si usted es amigo de este usuario. Tampoco podrá seguirle</em></p>
      <% else %>
          <p><em>Descripción:</em></p>
              <p><%= @profile.description %></p>
              <% unless @is_current_profile %>
                <% if current_user.profile.follows?(@profile) %>
                  <%= link_to "Dejar de seguir", "/profiles/unfollow/#{@profile.id}", class:"btn btn-primary btn-block"  %>
                <% else %>
                  <%= link_to "Seguir", "/profiles/follow/#{@profile.id}", class:"btn btn-primary btn-block"  %>
                <% end %>
              <% end %>
      <% end %>
      <% if @is_current_profile %>
        <%= link_to "Editar", edit_profile_path(@profile), class:"btn btn-primary btn-block" %>
        </br>
      <% else %>
        <% unless @is_friend_profile or not current_user.present? %>
          <%= link_to "Enviar petición de amistad", "/request_friendships/send_request/#{@profile.user_id}", class: "btn btn-primary btn-block"  %>
          </br>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="col-md-4">
    <div class="row container-fluid boton espacio-boton">
      <% if current_user.present? and @profile.user.banned_until.present? and (current_user.role_type == 'Administrator' || @profile.user == current_user) %>
          <p >Baneado hasta: <%= @profile.user.banned_until %></p>
      <% end %>
      <% if current_user.present? && current_user.role_type == 'Administrator' && @profile.user.role_type != 'Administrator' && @profile.user.banned_until == nil %>
        <form action="/profiles/ban/<%=@profile.id%>" method="get", class="form-derecha">
            <input type="text" name="date" placeholder="Banear hasta">
            <button type="submit", class="btn btn-primary">Banear</button>
        </form>
      <% end %>
      <% if current_user.present? && current_user.role_type == 'Administrator' && @profile.user.role_type == 'FreeUser' %>
        <%= link_to "Convertir a Premium", "/profiles/premium/#{@profile.id}", class:"btn btn-primary btn-block"  %>
       </br>
      <% end %>
    </div>
  </div>

</div>

</br>
</br>

<h3>Comentarios</h3>
<%= render 'comments/list', id: @profile.id, commentedClass: 'profile' %>
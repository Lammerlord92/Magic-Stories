<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
<script type="text/javascript">
    $(document).ready(function() {
        jQuery.noConflict();
        $("#buttonStory").on('click',function(){
            jQuery.noConflict();
            $("#modal").modal({
                show:true
            })
            jQuery.noConflict();
            $("#close").on('click',function(){
                $("#modal").modal('hide')
            })
        })
    })
</script>
<%end%>